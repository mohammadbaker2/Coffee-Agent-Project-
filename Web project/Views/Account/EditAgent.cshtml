@model Web_project.Models.Agent
@{
    ViewData["Title"] = "Edit Agent";
    ViewBag.Action = "Edit";
}

<h2>@ViewBag.Action Agent</h2>

<form asp-action="EditAgent" method="post" style="width:400px; margin:auto;">
    <input type="hidden" asp-for="AgentId" />

    <div style="margin-bottom:10px;">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="PhoneNumber">Phone</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Salary">Salary</label>
        <input asp-for="Salary" class="form-control" />
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="CityId">City</label>
        <select asp-for="CityId" class="form-control">
            <option value="">-- Select City --</option>
            @foreach (var city in ViewBag.Cities)
            {
                <option value="@city.CityId" selected="@(city.CityId == Model.CityId ? "selected" : "")">
                    @city.Name
                </option>
            }
        </select>
    </div>

    <div style="margin-bottom:10px;">
        <label asp-for="Role">Role</label>
        <select asp-for="Role" class="form-control">
            <option value="Admin" selected="@(Model.Role == "Admin" ? "selected" : "")">Admin</option>
            <option value="User" selected="@(Model.Role == "User" ? "selected" : "")">User</option>
        </select>
    </div>

    <button type="submit" style="padding:8px 15px; background-color:#6f4e37; color:white; border:none; border-radius:4px;">Save</button>
</form>
