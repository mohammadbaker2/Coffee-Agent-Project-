@model List<Web_project.Models.Agent>
@{
    ViewData["Title"] = "Agents Management";
}

<h2>Agents Management</h2>

<form method="get" style="margin-bottom:15px;">
    <input type="text" name="search" placeholder="Search by agent name..." style="padding:5px; width:200px;" />
    <button type="submit" style="padding:5px 10px; background-color:#6f4e37; color:white; border:none; border-radius:4px;">Search</button>
</form>

<table border="1" cellpadding="8" style="border-collapse:collapse; width:100%; text-align:center;">
    <tr style="background-color:#6f4e37; color:white;">
        <th>Name</th>
        <th>Phone</th>
        <th>Salary</th>
        <th>City</th>
        <th>Role</th>
        <th>Actions</th>
    </tr>
    @foreach (var agent in Model)
    {
        <tr>
            <td>@agent.Name</td>
            <td>@agent.PhoneNumber</td>
            <td>@agent.Salary</td>
            <td>@agent.City?.Name</td>
            <td>@agent.Role</td>
            <td>
                <a asp-action="EditAgent" asp-route-id="@agent.AgentId" style="padding:5px 10px; background-color:#4CAF50; color:white; text-decoration:none; border-radius:4px;">Edit</a>
                <form asp-action="Delete" method="post" style="display:inline;">
                    <input type="hidden" name="id" value="@agent.AgentId" />
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure?')" style="padding:5px 10px; background-color:#f44336; color:white; border:none; border-radius:4px;" />
                </form>
            </td>
        </tr>
    }
</table>
