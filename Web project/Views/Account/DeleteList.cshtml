@model List<Web_project.Models.Agent>

<h2>Delete Agents</h2>

<table border="1" cellpadding="8" style="border-collapse:collapse; width:100%; text-align:center;">
    <tr style="background-color:#6f4e37; color:white;">
        <th>Name</th>
        <th>Phone</th>
        <th>Salary</th>
        <th>City</th>
        <th>Role</th>
        <th>Action</th>
    </tr>
    @foreach (var agent in Model)
    {
        <tr>
            <td>@agent.Name</td>
            <td>@agent.PhoneNumber</td>
            <td>@agent.Salary</td>
            <td>@agent.City?.Name</td>
            <td>@agent.Role</td>
            <td>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@agent.AgentId" />
                    <input type="submit" value="Delete" onclick="return confirm('Are you sure?')" style="padding:5px 10px; background-color:#f44336; color:white; border:none; border-radius:4px;" />
                </form>
            </td>
        </tr>
    }
</table>
